{
  "name": "playwrightproject",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:allure": "npx rimraf ./allure-results ./allure-report",
    "test:unauth": "powershell -Command \"$env:BROWSER='chromium';$env:PW_PROJECT='unauthenticated-chromium'; npx playwright test --project=unauthenticated-chromium --reporter=line,allure-playwright\"",
    "test:auth": "powershell -Command \"$env:BROWSER='chromium'; $env:PW_PROJECT='authenticated-chromium'; npx playwright test --project=authenticated-chromium --reporter=line,allure-playwright\"",
    "test:auth:allure": "npm run clean:allure && npm run test:auth && npm run allure:generate && npm run allure:open",
    "test:unauth:allure": "npm run clean:allure && npm run test:unauth && npm run allure:generate && npm run allure:open",
    "test:both:allure": "npm run clean:allure && npm run test:unauth && npm run test:auth && npm run allure:generate && npm run allure:open",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "allure-playwright": "^3.4.2"
  }
}